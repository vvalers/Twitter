
<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<h1>Tweets</h1>

<div id="tweets" class="container mt-4">
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= render tweet %>
            <p>
             
            </p>
            <p>
             
            </p>
            <%= link_to "Show this tweet", tweet, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New tweet", new_tweet_path %>

<div class="mt-3">
<%= form_with url: tweets_path, method: :get, local: true do %>
  <div class="form-group">
    <%= text_field_tag :query, params[:query], placeholder: "Buscar tweets...", class: "form-control" %>
    
  </div>

  <%= submit_tag "Buscar", class: "mt-3 btn btn-primary" %>

<% end %>
</div> 


