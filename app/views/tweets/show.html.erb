<!-- Mensaje de éxito -->
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<!-- Mostrar el tweet -->
<%= render @tweet %>

<!-- Opciones de edición y navegación -->
<div class="mt-3">
  <%= link_to "Edit this tweet", edit_tweet_path(@tweet), class: "btn btn-warning me-2" %>
  <%= link_to "Back to tweets", tweets_path, class: "btn btn-secondary me-2" %>

  <!-- Botón para eliminar el tweet -->
  <%= button_to "Destroy this tweet", @tweet, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
